<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="UploadFiles Automation Testing">

    <parameter name="url" value="https://blueimp.github.io/jQuery-File-Upload/"/>
    
    <test name="Run on Firefox browser">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="com.jQuery.Level_12_Upload_Files"/>
        </classes>
    </test>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="com.jQuery.Level_12_Upload_Files"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="com.jQuery.Level_12_Upload_Files"/>
        </classes>
    </test>

</suite>